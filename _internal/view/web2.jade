	body(ng-app="app", ng-controller="getInfo")
		.container-fluid
			.page-header(align="center")
				h1 Golf Information
				img(src='./img/golf-player.png')

			.jumbotron(style='background-color:#95D47A;',id="page")
				.row
					.col-sm-3
						.jumbotron(style='background-color:#887952', id="yard")
							h4(align='center',style='color:white;') YARD
							table
								tr.col-xs-12(ng-repeat="yardName in yardNames track by $index")
									td
										.btn-group.btn-group-justified(role="group" aria-label="...")
											.btn-group(role="group")
												button.btn.btn-default(type="button",ng-click="correspondingDate($index);", data-toggle='dropdown', aria-haspopup='true', aria-expanded='false' )
													img(src='./img/flag.png')
													a(ng-href="#",id="{{$index}}") {{yardName.doc.name}}
													&nbsp;&nbsp;
													span.caret
												ul.dropdown-menu(role='menu')
													li(ng-repeat="finalDate in finalDates",ng-click="correspondingDateUser($index);")
														a(ng-href="#") {{finalDate}}
											// .btn-group(role="group")
											// 	button.btn.btn-default.dropdown-toggle(type="button", data-toggle='dropdown', aria-haspopup='true', aria-expanded='false',ng-click="correspondingDate($index);")
