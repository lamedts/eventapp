						a.btn.btn-primary(input type='button', href="#showTable",ng-click="toggle()", aria-label="Toggle ngHide", data-toggle='collapse', data-target="#webcreateYard")
								| Create Yard 
								
					.col-sm-9
						.panel 
							table.table.table-striped(align='center', ng-click="yardOutput();")
								tr
									th Name
									th.text-center(colspan="18", align='center') Par
								tr(style='color:white;')
									th 
									th 1
									th 2
									th 3
									th 4
									th 5
									th 6
